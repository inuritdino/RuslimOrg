    <ul>
      <li>Item 1</li>
      <li>Item 2</li>
    </ul>
  </div>
    </div>
    <footer>
      <div>
	<ul>
	  <li><%= link_to 'About Us', '/about-us.html' %>
	</ul>
      </div>
      <div>
	<ul>
	  <li><%= link_to 'About Us', '/about-us.html' %>
	</ul>
      </div>
      <div>
	<ul>
	  <li><%= link_to 'About Us', '/about-us.html' %>
	</ul>
      </div>
    </footer>
  </body>
</html>
